<mvc:View controllerName="com.UI5Starter.Application.Dashboard.controller.Dashboard"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f">
	<Page showHeader="false">
		<f:GridList id="gridList3" items="{/JsonValue}" class="sapUiContentPadding">
			<f:headerToolbar>
				<Toolbar>
					<Title text="CRUD Ekran" />
					<ToolbarSpacer />
					<SearchField width="15rem" />
					<Button icon="sap-icon://add" press="addAccount"/>
				</Toolbar>
			</f:headerToolbar>
			<f:customLayout>
				<grid:GridBoxLayout boxWidth="20rem" />
			</f:customLayout>

			<f:GridListItem highlight="Success">
				<VBox height="100%" justifyContent="SpaceBetween">
					<layoutData>
						<FlexItemData growFactor="1" shrinkFactor="0" />
					</layoutData>
					<VBox class="grid-header-box">
						<ObjectStatus text="{hareketdetay/HareketlerDetay/0/iban}" state="Success" />
					</VBox>
					<VBox class="sapUiSmallMargin">
						<!-- <HBox justifyContent="SpaceBetween">							
							
						</HBox> -->

						<Label design="Bold" text="Ad/Unvan: {hareketdetay/HareketlerDetay/0/adUnvan}" tooltip="{hareketdetay/HareketlerDetay/0/adUnvan}" wrapping="false" class="sapUiTinyMarginBottom" />
						<!-- <Label text="hesapNo: {hesapNo}" wrapping="true" class="sapUiTinyMarginBottom" /> -->
						<Label text="AcilisBakiye: {AcilisBakiye}" wrapping="true" class="sapUiTinyMarginBottom" />
						<Label text="CariBakiye: {CariBakiye}" wrapping="true" class="sapUiTinyMarginBottom" />
						<Label text="Şube Adı: {subeAdi}" wrapping="true" class="sapUiTinyMarginBottom" />
					</VBox>
					<OverflowToolbar design="Solid">
						<ToolbarSpacer />
						<!-- <Text text="Sonuç : {hataAck}" wrapping="true" /> -->
						<Button icon="sap-icon://edit" type="Transparent" />
						<Button icon="sap-icon://delete" type="Transparent" />
						<Button icon="sap-icon://message-information" press="getInformation" type="Transparent" />
						</OverflowToolbar>
					</VBox>
				</f:GridListItem>


			</f:GridList>
		</Page>
	</mvc:View>