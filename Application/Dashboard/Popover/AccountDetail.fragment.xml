<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog  type="Message" contentWidth="50%" 
        beforeOpen="onBeforeOpen" 
        draggable="true"
        title="Account Detail">
        <customHeader>
            <Bar>
                <contentLeft></contentLeft>
                <contentMiddle>
                    <Label text="Account Detail" design="Bold"/>
                </contentMiddle>
                <contentRight>
                    <Button
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="closeDialog"></Button>
                </contentRight>
            </Bar>
        </customHeader>
    <ObjectHeader
		responsive="true"
		binding="{/JsonValue/0/hareketdetay/HareketlerDetay/0/}"
		title="{adUnvan}"
		numberState="Success"
		backgroundDesign="Translucent"
		class="sapUiResponsivePadding--header deneme">
		<ObjectAttribute
			title="Açıklama"
            wrapping="false"
			text="{aciklama}"
            tooltip="{aciklama}" />
		<statuses>
			<ObjectStatus
				title="dekontNo "
				text="{dekontNo}"
				state="Success"/>
		</statuses>
		<headerContainer>
        
			<IconTabBar
				id="itb1"
				selectedKey="key3"
                expandable="false"
				upperCase="true"
				>
				<items>
				<IconTabFilter
					text="Hareketler"
					key="key1">
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Text text="islemTarihi: {islemTarihi}"/>
								<Text text="tutar: {tutar}"/>
								<Text text="tcknVkn: {tcknVkn}"/>
								<Text text="IBAN: {iban}"/>
								<Text text="Bakiye: {Bakiye}"/>
							</l:content>
						</l:VerticalLayout>
				</IconTabFilter> 
				<IconTabFilter
					text="İşlem Detayları"
					key="key2">
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
                            <HBox>
                                <HBox width="20%">
                                 <Label text="İşlem Tarihi" design="Bold"/>
                                </HBox>
								<Text text=" : 24.10.2021"/>
                            </HBox>

                             <HBox>
                                <HBox width="20%">
                                 <Label text="Muhasebe Tarihi" design="Bold"/>
                                </HBox>
								<Text text=" : {muhasebetarihi}"/>
                            </HBox>

                             <HBox>
                                <HBox width="20%">
                                 <Label text="Başlangıç Tarihi" design="Bold"/>
                                </HBox>
								<Text text=" : {valorTarihi}"/>
                            </HBox>

                             <HBox>
                                <HBox width="20%">
                                 <Label text="İşlem Açıklama" design="Bold"/>
                                </HBox>
								<Text text=" : {islemAciklama}"/>
                            </HBox>

                             
                              
								<!-- <Text text="Muhasebe Tarihi: {muhasebetarihi}"/>
								<Text text="Başlangıç Tarihi: {valorTarihi}"/>
								<Text text="İşlem Açıklama: {islemAciklama}"/> -->
							</l:content>
						</l:VerticalLayout>
				</IconTabFilter>
				<!-- <IconTabFilter
					text="Attachments"
					count="1"
					key="key3">
					<Link text="Attachment" press="onPress" ariaHasPopup="Dialog"/>
				</IconTabFilter> -->
				<!-- <IconTabFilter
					text="PartnerInfo"
					key="key4"
					count="1">
						<Link
							text="Partner SAP SE"
							target="_blank"
							href="#"/>
				</IconTabFilter> -->
                </items>
			</IconTabBar>
            
		</headerContainer>
	</ObjectHeader>
    </Dialog>
    </core:FragmentDefinition>